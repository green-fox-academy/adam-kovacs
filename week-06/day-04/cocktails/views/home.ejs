<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Cocktails</title>
  <link rel="stylesheet" type="text/css" href="static/main.css">
  <link href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet">
</head>

<body>

  <p><h1>Cocktails</h1></p>

  <nav>
    <li class="navlink">
      <a href="/">ALL</a>
    </li>
    <% alcList.forEach(element => { 
      let nameUpper = element.toUpperCase()%>
      <li class="navlink">
        <a href="/?alcohol=<%= element %>">
          <%= nameUpper %>
        </a>
      </li>
      <% }); %>
  </nav>

  <table>
    <thead>
      <th>NAME</th>
      <th>PRICE</th>
    </thead>
    <tbody>
      <% cocList.forEach((element, i) => {
        let colored = (i % 2 === 0) ? 'class=colored' : '' %> 
        <tr <%= colored %>>
          <td>
            <h2>
              <%= element.name %>
            </h2>
            <% if (element.isAlcoholic === false) { %>
              <h3> (non-alcoholic)</h3>
              <% } %>
                <br>
                <% element.contains.forEach(ingr => { %>
                  <%= ingr %>,
                    <% }) %>
          </td>
          <td class="price">
            <%= element.price %> Ft
          </td>
        </tr>
        <% }); %>
    </tbody>
  </table>
</body>

</html>